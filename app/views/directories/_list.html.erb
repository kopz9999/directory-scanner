<div class="panel panel-default">
    <div class="panel-heading">
        <i class="fa fa-bar-chart-o fa-fw"></i> Available Directories
    </div>
    <!-- /.panel-heading -->
    <div class="panel-body">
        <div class="row">
            <div class="col-lg-12">
                <div class="table-responsive">
                    <table class="table table-bordered table-hover table-striped">
                        <thead>
                          <tr>
                            <th>Name</th>
                            <th>Address</th>
                            <th>Phone Number</th>
                            <th>Directory</th>
                            <th>URL</th>
                            <th>Status</th>
                          </tr>
                        </thead>
                        <tbody>
                          <% DirectoryScanner::Manager.instance
                              .directories.each do |d| %>
                            <tr id='resuls-<%= d.name %>'>
                              <td> - </td>
                              <td> - </td>
                              <td> - </td>
                              <td>
                                <%= image_tag("scanners/partner-logo-#{d.name}") %>
                                <%= d.display %>
                              </td>
                              <td> - </td>
                              <td> - </td>
                            </tr>
                          <% end %>
                        </tbody>
                    </table>
                </div>
                <!-- /.table-responsive -->
            </div>
        </div>
        <!-- /.row -->
    </div>
    <!-- /.panel-body -->
</div>
